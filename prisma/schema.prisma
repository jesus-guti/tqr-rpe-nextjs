// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // Se conecta a Supabase
  directUrl = env("DIRECT_URL")
}

model users {
  id         String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email      String    @unique
  role       String    @default("coach") // 'admin', 'coach'
  created_at DateTime  @default(now()) @db.Timestamptz(6)
  team_id    String?   @db.Uuid
  teams      teams?    @relation(fields: [team_id], references: [id])
}

model teams {
  id         String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name       String
  created_at DateTime  @default(now()) @db.Timestamptz(6)
  users      users[]
  players    players[]
}

model players {
  id            String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name          String
  auth_token    String   @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  created_at    DateTime @default(now()) @db.Timestamptz(6)
  daily_entries daily_entries[]
  team_id       String?   @db.Uuid
  teams         teams?    @relation(fields: [team_id], references: [id])
}

model daily_entries {
  id             BigInt   @id @default(autoincrement())
  player_id      String   @db.Uuid
  entry_date     DateTime @db.Date
  tqr_recovery   Int?
  tqr_energy     Int?
  tqr_soreness   Int?
  rpe_borg_scale Int?
  created_at     DateTime @default(now()) @db.Timestamptz(6)
  players        players  @relation(fields: [player_id], references: [id], onDelete: Cascade)

  @@unique([player_id, entry_date])
}